<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="18dp"
        android:elevation="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red_200">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/item_BTN_price"
                        android:layout_alignTop="@id/item_BTN_price"
                        android:layout_alignEnd="@id/item_BTN_price"
                        android:layout_alignBottom="@id/item_BTN_price"
                        android:src="@color/red_700A" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/item_BTN_price"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="$5.5"
                        android:textColor="@color/white"

                        />


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="13dp"
        android:scaleType="fitCenter"
        android:src="@drawable/burger" />
</RelativeLayout>